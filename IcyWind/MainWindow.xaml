<Window x:Class="IcyWind.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IcyWind"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        mc:Ignorable="d"
        Title="IcyWind" Height="720" Width="1280" Icon="IcyWindIcon.ico"
        ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen"
        Closing="MainWindow_OnClosing">
    <Grid x:Name="MainGrid">
        <tb:TaskbarIcon x:Name="TrayIcon" Visibility="Visible" IconSource="IcyWindIcon.ico" ToolTipText="IcyWind">
            <tb:TaskbarIcon.ContextMenu>
                <ContextMenu Style="{x:Null}">
                    <MenuItem x:Name="MenuItemLabelHide" Header="Hide" />
                    <MenuItem Header="Close" />
                </ContextMenu>
            </tb:TaskbarIcon.ContextMenu>
        </tb:TaskbarIcon>
        <ContentControl x:Name="MainContent" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Height="691" Width="1274"/>
    </Grid>
</Window>