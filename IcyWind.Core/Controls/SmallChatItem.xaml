<UserControl x:Class="IcyWind.Core.Controls.SmallChatItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IcyWind.Core.Controls"
             mc:Ignorable="d" 
             Height="40" d:DesignWidth="200">
    <Grid>
        <Rectangle Fill="#02000000"></Rectangle>
        <Ellipse x:Name="StatusEllipse" Fill="#2ecc71" HorizontalAlignment="Left" Height="7" Margin="10,0,0,0" VerticalAlignment="Center" Width="7"/>
        <Label x:Name="PlayerNameLabel" Content="BlahBlahBlah" Foreground="#FFCFCFCF" HorizontalAlignment="Left" Margin="22,0,0,0" VerticalAlignment="Top" FontSize="14"/>
        <Label x:Name="StatusLabel" Content="Online" Foreground="#FFCFCFCF" HorizontalAlignment="Left" Margin="22,0,0,0" VerticalAlignment="Bottom" FontSize="10" FontStyle="Italic"/>
    </Grid>
</UserControl>
