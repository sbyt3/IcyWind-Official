<UserControl x:Class="IcyWind.Core.Controls.PlayerChatControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IcyWind.Core.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="300">
    <Grid Background="#FF263442">
        <Button x:Name="CloseButton" Content="X" HorizontalAlignment="Right" Background="#FF263442" Margin="0,0,0,0" VerticalAlignment="Top" Width="30" Click="CloseButton_Click" Height="30" Foreground="AliceBlue"/>
        <Ellipse x:Name="StatusEllipse" Fill="#2ecc71" HorizontalAlignment="Left" Height="7" Margin="10,0,0,0" VerticalAlignment="Center" Width="7"/>
        <Label x:Name="PlayerNameLabel" Content="TheOneTrapBook" Foreground="#FFCFCFCF" HorizontalAlignment="Left" Margin="22,0,45,0" VerticalAlignment="Top" FontSize="14"/>
    </Grid>
</UserControl>
